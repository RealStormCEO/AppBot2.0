<link rel="stylesheet" href="/dashboard.css">
<%- include('partials/navbar') %>

<div class="server-select-container">
  <h1>🌐 Select a Server</h1>
  <p class="subtext">Choose a server you manage below:</p>

  <div class="server-grid">
    <% guilds.forEach(guild => { %>
      <form method="POST" action="/select-server">
        <input type="hidden" name="guild_id" value="<%= guild.id %>">
        <div class="server-card">
            <img class="server-icon"
            src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=128` : '/default_icon.png' %>"
            alt="<%= guild.name %>">       
          <h3><%= guild.name %></h3>
          <button type="submit">✅ Select</button>
        </div>
      </form>
    <% }) %>
  </div>
</div>
